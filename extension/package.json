{
  "name": "mecha-lsp",
  "displayName": "Mecha LSP",
  "description": "Language Server for Mecha",
  "repository": {
    "type": "git",
    "url": "https://github.com/heyjstn/mecha/extension"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mecha"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mecha",
        "aliases": ["Mecha", "mecha"],
        "extensions": [".mecha"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mecha",
        "scopeName": "source.mecha",
        "path": "./syntaxes/mecha.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Mecha LSP",
      "properties": {
        "mecha.serverPath": {
          "type": "string",
          "default": "lsp",
          "description": "Path to the Mecha LSP server executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
